<%- include('../partials/header') %> <%- include('../partials/menu') %>

<div class="bg-dark">
  <br />
  <br />
  <div class="container justify-content-center">
    <div class="row">
      <div class="form col-sm-7">
        <input
          class="form-control"
          type="search"
          id="search_text"
          placeholder="Enter search text"
          aria-label="Search"
        />
      </div>

      <div class="col-sm">
        <button id="search_button" class="btn btn-light" type="button">
          Search
        </button>
      </div>
    </div>
    <!-- error-checking-div -->
    <div class="row col-sm-6" id="error_message"></div>
  </div>
  <br />
  <br />
</div>

<!-- this is where the cards populate -->
<div class="container-lg" id="results_container"></div>

<!-- this is the movie modal popup -->
<div id="movie_modal" class="modal fade bd-example-modal-lg">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal_label">Add Review</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="close_modal"
        ></button>
      </div>

      <div class="modal-body">
        <form id="reviewForm" action="/addReview" method="post">
          <div class="form-group row">
            <label for="movie_name" class="col-sm-4 form-label"
              >Movie Name</label
            >
            <div class="col-sm-8">
              <input
                class="form-control"
                id="movie_name"
                name="movie_name"
                readonly
              />
            </div>
          </div>
          <div class="form-group row">
            <label for="movie_review" class="col-sm-4 col-form-label"
              >Enter your review here:</label
            >
            <div class="col-sm-8">
              <textarea
                class="form-control"
                name="movie_review"
                id="movie_review"
                rows="5"
              ></textarea>
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-sm float-right">
            Submit
          </button>
        </form>
        <br />
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
